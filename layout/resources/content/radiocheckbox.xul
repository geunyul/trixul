<window name="main" title="Radio Button Test" main="true" width="600" height="300" x="100" y="100" position="center, mouse">
    <script type="text/javascript" src="resources/content/radiocheckbox.js"/>
    <spacer/>
    <box orient="vertical">
        <spacer/>
        <checkbox label="Check Item 1" id="CheckItem1" checked="true"/>
        <spacer/>
        <checkbox label="Check Item 2" id="CheckItem2" checked="false"/>
        <spacer/>
        <checkbox label="Check Item 3" id="CheckItem3" checked="true"/>
        <spacer/>
        <checkbox label="Check Item 4" id="CheckItem4" checked="false"/>
        <spacer/>
    </box>
    <spacer/>
    <box orient="horizontal">
        <spacer/>
        <checkbox label="Check Item 5" id="CheckItem5" checked="true"/>
        <spacer/>
        <checkbox label="Check Item 6" id="CheckItem6" checked="false"/>
        <spacer/>
        <checkbox label="Check Item 7" id="CheckItem7" checked="true"/>
        <spacer/>
        <checkbox label="Check Item 8" id="CheckItem8" checked="false"/>
        <spacer/>
    </box>
    <spacer/>
    <box orient="vertical">
        <spacer/>
        <radiobutton group="radiogroup1" label="Radio Button 1" id="RadioButton1" checked="true"/>
        <spacer/>
        <radiobutton group="radiogroup1" label="Radio Button 2" id="RadioButton2"/>
        <spacer/>
        <radiobutton group="radiogroup1" label="Radio Button 3" id="RadioButton3"/>
        <spacer/>
        <radiobutton group="radiogroup1" label="Radio Button 4" id="RadioButton4"/>
        <spacer/>
    </box>
    <spacer/>
    <box orient="horizontal">
        <spacer/>
        <radiobutton group="radiogroup2" label="Radio Button 5" id="RadioButton5" checked="true"/>
        <spacer/>
        <radiobutton group="radiogroup2" label="Radio Button 6" id="RadioButton6"/>
        <spacer/>
        <radiobutton group="radiogroup2" label="Radio Button 7" id="RadioButton7"/>
        <spacer/>
        <radiobutton group="radiogroup2" label="Radio Button 8" id="RadioButton8"/>
        <spacer/>
    </box>
    <spacer/>
    <box orient="horizontal">
        <spacer/>
        <button label="ToggleCheckItem" onclick="return ToggleCheckItem();"/>
        <button label="SetNextRadio" onclick="return SetNextRadio();"/>
    </box>
</window>
